<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cubeassistant.com"
    android:versionCode="1"
    android:versionName="1.0" xmlns:tools="http://schemas.android.com/tools" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />
    
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cube_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" tools:ignore="ExportedContentProvider" >
        <activity
            android:name="cubeassistant.com.Ly01"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="cubeassistant.com.Ly02" android:screenOrientation="landscape" android:configChanges="orientation" android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>         
		<activity android:name="cubeassistant.com.Ly03" android:theme="@android:style/Theme.NoTitleBar" android:screenOrientation="portrait" />
		<activity android:name="cubeassistant.com.Ly04"/>
		<provider android:name="cubeassistant.com.HistoryProvider" android:authorities="cube_assistant.com.HistoryProvider"></provider>
        
        
    </application>

</manifest>
